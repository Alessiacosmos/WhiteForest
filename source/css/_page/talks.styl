.talks-name
  font-size: 1.7em
  margin: 45px 0px 5px 0px // 40px 0px 30px 0px
  font-family: Merriweather
  text-align: left //center
.talks-post
  width 95%
  display flex
  flex-wrap: wrap
  justify-content: center
.talks-post-date 
  width 100%
  line-height: 1.5em
  font-family: Merriweather
  color $color-theme-main
  font-weight: 1000
  background-color #fff
  font-size: 1.1em
  border-radius 5px
  padding 0px 10px
  margin 20px 0px 5px 0px
  transition all .4s
.talks-post-content 
  width 100%
  font-size 1em
  transition .4s
  font-family Gothic
  padding 10px 20px
  margin 0px 20px 0px 20px
  // margin-right auto
  background-color $color-theme-secondary //#F8FCFA