<section class="archive-outer">
  <section class="archive-inner">

    <div class="archive-name <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
      <p> 
        <% if(site_ele_key.toLowerCase() ==='tag') {%> Tags
        <% } else { %> Categories  <% } %>
      </p>
    </div>
    <%- partial('tag-cate/tag-button', {terms: site_ele}) %>

    <div class="tags-sections <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
    <% site_ele.each(function(item) { %>
      <div class="tags-each <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
      <div id="<%= item.name %>" class="tags-each-title <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
        <p>
          <%= __(site_ele_key) %>:  <!--'Tag'-->
          <a href="<%- url_for(item.path) %>">
          <%= item.name %></a>
        </p>
      </div>
      
      <ul>
      <% item.posts.each(function(post){ %>
        <li class="tag-each-li">
          <a  href="<%=url_for(post.path)%>">
            <div class="archive-post <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
              <div class="archive-post-title"><%=post.title%></div>
              <div class="archive-post-date"><%=date(post.date,'MM-DD') %></div>
              <!-- <%=full_date(post.date,'MMM D') %> -->
            </div>
            </a>
        </li>
      <% }) %>
      </ul>
      </div>
    
    <% }) %>
    </div>
    
  </section>
</section>
